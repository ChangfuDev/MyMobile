<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.mymobile.activity.LostFindActivity">

    <TextView android:text="手机防盗" android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#66ff4400"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#000000"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安全号码"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/tv_safe_number"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:textSize="18sp"/>
    </RelativeLayout>
    <View
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#66000000"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="防盗保护是否开启"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textColor="#000000"/>

        <ImageView
            android:id="@+id/iv_status"
            android:src="@android:drawable/star_on"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp" />
    </RelativeLayout>
    <View
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#66000000"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:clickable="true"
            android:onClick="reEnterSetting"
            android:background="@drawable/shape_selsctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="重新进入设置向导"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textColor="#000000"/>

    </RelativeLayout>
    <View
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#66000000"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:text="功能简介"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#55000000"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textColor="#000000"/>

    <TextView
        android:drawableLeft="@android:drawable/star_big_on"
        android:text="GPS追踪：#*location*#"
        style="@style/text_content_style" />
    <TextView
        android:drawableLeft="@android:drawable/star_big_on"
        android:text="播放报警音乐：#*alarm*#"
        style="@style/text_content_style" />
    <TextView
        android:drawableLeft="@android:drawable/star_big_on"
        android:text="远程销毁数据: #*wipedata*#"
        style="@style/text_content_style" />
    <TextView
        android:drawableLeft="@android:drawable/star_big_on"
        android:text="远程锁屏: #*lockscreen*#"
        style="@style/text_content_style" />

</LinearLayout>
